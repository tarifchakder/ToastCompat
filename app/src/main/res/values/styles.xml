<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toastSolid">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
    </style>

    <style name="toastGradient">
        <item name="toastBackgroundType">GRADIENT</item>
        <item name="toastGradientStartColor">@color/default_gradient_start_color</item>
        <item name="toastGradientEndColor">@color/default_gradient_end_color</item>
        <item name="toastTextColor">@color/white</item>
    </style>

    <style name="toastDrawable">
        <item name="toastDrawableBackground">@drawable/round_view_bg</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastDrawableTint">@color/black</item>
    </style>

    <style name="colorizedBoldText">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@android:color/darker_gray</item>
        <item name="toastTextColor">@color/black</item>
        <item name="toastTextBold">true</item>
        <item name="toastFont">@font/marko_one</item>
    </style>

    <style name="iconStart">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
        <item name="toastIconStart">@drawable/ic_baseline_circle_notifications_24</item>
    </style>

    <style name="iconEnd">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
        <item name="toastIconEnd">@drawable/ic_baseline_circle_notifications_24</item>
    </style>

    <style name="iconBoth">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
        <item name="toastIconEnd">@drawable/ic_baseline_circle_notifications_24</item>
        <item name="toastIconStart">@drawable/ic_baseline_circle_notifications_24</item>
    </style>


    <style name="gravityStyle">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
        <item name="toastGravity">CENTER</item>
    </style>


    <style name="strokeStyle">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">10dp</item>
        <item name="toastGravity">BOTTOM</item>
        <item name="toastStrokeColor">@android:color/holo_green_light</item>
        <item name="toastStrokeWidth">2dp</item>
    </style>


    <style name="allStyle">
        <item name="toastBackgroundType">SOLID</item>
        <item name="toastColorBackground">@color/black</item>
        <item name="toastTextColor">@color/white</item>
        <item name="toastRadius">15dp</item>
        <item name="toastTextBold">true</item>
        <item name="toastFont">@font/marko_one</item>
        <item name="toastTextSize">12sp</item>
        <item name="toastIconSize">20</item>
        <item name="toastIconStart">@drawable/ic_baseline_circle_notifications_24</item>
        <item name="toastIconEnd">@drawable/ic_baseline_circle_notifications_24</item>
        <item name="toastGravity">BOTTOM</item>
        <item name="toastStrokeColor">@android:color/holo_green_light</item>
        <item name="toastStrokeWidth">2dp</item>
        <item name="toastLength">LONG</item>
    </style>


</resources>